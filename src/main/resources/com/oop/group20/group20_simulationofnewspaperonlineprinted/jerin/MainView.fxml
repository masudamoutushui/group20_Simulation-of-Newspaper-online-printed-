<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.oop.group20.group20_simulationofnewspaperonlineprinted.jerin.MainViewController">
    <children>
        <TabPane layoutX="14.0" layoutY="14.0" prefHeight="375.0" prefWidth="573.0" tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="11.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="13.0" AnchorPane.topAnchor="14.0">
            <tabs>
                <Tab text="Subscriber Management">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <VBox layoutX="14.0" layoutY="14.0" prefHeight="305.0" prefWidth="240.0" spacing="10.0">
                                    <children>
                                        <Label text="New Subscriber">
                                            <font>
                                                <Font name="System Bold" size="14.0" />
                                            </font>
                                        </Label>
                                        <Label text="Name:" />
                                        <TextField fx:id="nameField" promptText="Enter subscriber name" />
                                        <Label text="Email:" />
                                        <TextField fx:id="emailField" promptText="Enter subscriber email" />
                                        <Button fx:id="registerButton" mnemonicParsing="false" onAction="#handleRegisterSubscriber" text="Register Subscriber" />
                                    </children>
                                </VBox>
                                <TextArea fx:id="subscriberLogArea" layoutX="270.0" layoutY="14.0" prefHeight="305.0" prefWidth="288.0" promptText="Logs and status messages will appear here..." />
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab text="Marketing">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <VBox layoutX="14.0" layoutY="14.0" prefHeight="305.0" prefWidth="240.0" spacing="10.0">
                                    <children>
                                        <Label text="Marketing Campaigns">
                                            <font>
                                                <Font name="System Bold" size="14.0" />
                                            </font>
                                        </Label>
                                        <Label text="Campaign Name:" />
                                        <TextField fx:id="campaignNameField" promptText="e.g., Summer Discount" />
                                        <Button fx:id="createCampaignButton" mnemonicParsing="false" onAction="#handleCreateCampaign" text="Create Campaign" />
                                        <Button fx:id="viewAnalyticsButton" layoutX="10.0" layoutY="111.0" mnemonicParsing="false" onAction="#handleViewAnalytics" text="View Subscriber Analytics" />
                                    </children>
                                </VBox>
                                <TextArea fx:id="marketingLogArea" layoutX="270.0" layoutY="14.0" prefHeight="305.0" prefWidth="288.0" promptText="Campaign and analytics reports will appear here..." />
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab text="Finance">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <VBox layoutX="14.0" layoutY="14.0" prefHeight="305.0" prefWidth="240.0" spacing="10.0">
                                    <children>
                                        <Label text="Financial Operations">
                                            <font>
                                                <Font name="System Bold" size="14.0" />
                                            </font>
                                        </Label>
                                        <Button fx:id="generateReportButton" mnemonicParsing="false" onAction="#handleGenerateRevenueReport" text="Generate Revenue Report" />
                                        <Label text="Payment ID to Refund:" />
                                        <TextField fx:id="refundPaymentIdField" promptText="e.g., PAY12345" />
                                        <Button fx:id="processRefundButton" mnemonicParsing="false" onAction="#handleProcessRefund" text="Process Refund" />
                                    </children>
                                </VBox>
                                <TextArea fx:id="financeLogArea" layoutX="270.0" layoutY="14.0" prefHeight="305.0" prefWidth="288.0" promptText="Financial reports and refund status will appear here..." />
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</AnchorPane>