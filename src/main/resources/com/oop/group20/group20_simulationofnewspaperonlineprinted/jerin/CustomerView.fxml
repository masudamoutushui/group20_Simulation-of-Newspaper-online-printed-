<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450.0" prefWidth="650.0" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.oop.group20.group20_simulationofnewspaperonlineprinted.jerin.CustomerViewController">
    <children>
        <VBox alignment="TOP_CENTER" layoutX="25.0" layoutY="25.0" spacing="25.0" AnchorPane.bottomAnchor="25.0" AnchorPane.leftAnchor="25.0" AnchorPane.rightAnchor="25.0" AnchorPane.topAnchor="25.0">
            <children>
                <Label text="Choose Your Subscription Plan">
                    <font>
                        <Font name="System Bold" size="26.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER" spacing="40.0">
                    <children>
                        <!-- Online Subscription Plan -->
                        <VBox alignment="TOP_CENTER" prefHeight="220.0" prefWidth="260.0" spacing="12.0" style="-fx-border-color: #e0e0e0; -fx-border-radius: 8; -fx-background-color: #f9f9f9; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                            </padding>
                            <children>
                                <Label text="Online Edition">
                                    <font>
                                        <Font name="System Bold" size="20.0" />
                                    </font>
                                </Label>
                                <Label text="Full access to all articles on our website and mobile app." textAlignment="CENTER" wrapText="true" />
                                <VBox VBox.vgrow="ALWAYS" />
                                <Label text="৳499 / month">
                                    <font>
                                        <Font name="System Bold" size="18.0" />
                                    </font>
                                </Label>
                                <Button mnemonicParsing="false" onAction="#handleSubscribeOnline" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold;" text="Subscribe Now" />
                            </children>
                        </VBox>
                        <!-- Print + Online Subscription Plan -->
                        <VBox alignment="TOP_CENTER" prefHeight="220.0" prefWidth="260.0" spacing="12.0" style="-fx-border-color: #e0e0e0; -fx-border-radius: 8; -fx-background-color: #f9f9f9; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                            </padding>
                            <children>
                                <Label text="Print + Online">
                                    <font>
                                        <Font name="System Bold" size="20.0" />
                                    </font>
                                </Label>
                                <Label text="Daily newspaper delivery plus complete online and app access." textAlignment="CENTER" wrapText="true" />
                                <VBox VBox.vgrow="ALWAYS" />
                                <Label text="৳799 / month">
                                    <font>
                                        <Font name="System Bold" size="18.0" />
                                    </font>
                                </Label>
                                <Button mnemonicParsing="false" onAction="#handleSubscribePrint" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold;" text="Subscribe Now" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <TextArea fx:id="statusTextArea" editable="false" prefHeight="100.0" promptText="Your subscription status will appear here." />
            </children>
        </VBox>
    </children>
</AnchorPane>