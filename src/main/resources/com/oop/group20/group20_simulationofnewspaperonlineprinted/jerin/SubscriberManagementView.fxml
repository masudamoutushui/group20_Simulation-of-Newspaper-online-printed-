<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.oop.group20.group20_simulationofnewspaperonlineprinted.jerin.SubscriberManagementController">
    <children>
        <VBox spacing="15.0" AnchorPane.bottomAnchor="25.0" AnchorPane.leftAnchor="25.0" AnchorPane.rightAnchor="25.0" AnchorPane.topAnchor="25.0">
            <children>
                <Label text="Subscriber Management">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                <HBox spacing="20.0" VBox.vgrow="ALWAYS">
                    <children>
                        <VBox prefWidth="500.0" spacing="10.0" HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="Existing Subscribers">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Label>
                                <TableView fx:id="subscriberTableView" prefHeight="200.0" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="idColumn" prefWidth="150.0" text="Subscriber ID" />
                                        <TableColumn fx:id="nameColumn" prefWidth="125.0" text="Name" />
                                        <TableColumn fx:id="emailColumn" prefWidth="150.0" text="Email" />
                                        <TableColumn fx:id="statusColumn" prefWidth="100.0" text="Status" />
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                    </columnResizePolicy>
                                </TableView>
                            </children>
                        </VBox>
                        <VBox prefWidth="280.0" spacing="15.0" style="-fx-border-color: lightgray; -fx-padding: 15; -fx-border-radius: 5;">
                            <children>
                                <Label text="Add / Manage Subscriber">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Label>
                                <Label text="Name:" />
                                <TextField fx:id="nameField" promptText="Enter full name" />
                                <Label text="Email:" />
                                <TextField fx:id="emailField" promptText="Enter email address" />
                                <Button mnemonicParsing="false" onAction="#handleAddSubscriber" prefWidth="250.0" text="Add New Subscriber" />
                                <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#handleDeleteSubscriber" prefWidth="250.0" style="-fx-background-color: #dc3545;" text="Delete Selected Subscriber" textFill="WHITE" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <Label text="Logs">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <TextArea fx:id="logTextArea" editable="false" prefHeight="100.0" />
            </children>
        </VBox>
    </children>
</AnchorPane>