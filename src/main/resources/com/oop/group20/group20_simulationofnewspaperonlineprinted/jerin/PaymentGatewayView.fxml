<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.oop.group20.group20_simulationofnewspaperonlineprinted.jerin.PaymentGatewayController">
    <children>
        <VBox spacing="15.0" AnchorPane.bottomAnchor="25.0" AnchorPane.leftAnchor="25.0" AnchorPane.rightAnchor="25.0" AnchorPane.topAnchor="25.0">
            <children>
                <Label text="Payment Gateway Dashboard">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                <HBox spacing="20.0">
                    <children>
                        <VBox spacing="15.0" style="-fx-border-color: lightgray; -fx-padding: 15; -fx-border-radius: 5;">
                            <children>
                                <Label text="Financial Actions">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Label>
                                <Button mnemonicParsing="false" onAction="#handleGenerateReport" prefWidth="250.0" text="Generate Revenue Report" />
                                <Label text="Payment ID to Refund:" />
                                <TextField fx:id="refundIdField" promptText="Enter Payment ID" />
                                <Button mnemonicParsing="false" onAction="#handleProcessRefund" prefWidth="250.0" style="-fx-background-color: #ffc107;" text="Process Refund" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <Label text="Recent Payment Records">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Label>
                <TableView fx:id="paymentsTableView" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="paymentIdColumn" prefWidth="150.0" text="Payment ID" />
                        <TableColumn fx:id="amountColumn" prefWidth="100.0" text="Amount (à§³)" />
                        <TableColumn fx:id="statusColumn" prefWidth="100.0" text="Status" />
                        <TableColumn fx:id="dateColumn" prefWidth="200.0" text="Date" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
                <Label text="System Logs">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <TextArea fx:id="logTextArea" editable="false" prefHeight="100.0" />
            </children>
        </VBox>
    </children>
</AnchorPane>