<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="503.0" prefWidth="695.0"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.ReporterController">

    <children>

        <Label layoutX="176.0" layoutY="20.0" text="Reporter Dashboard">
            <font>
                <Font name="System Bold" size="18.0"/>
            </font>
        </Label>

        <Label layoutX="50.0" layoutY="55.0" text="Article Title"/>
        <TextField fx:id="articleTitleField" layoutX="150.0" layoutY="50.0"
                   prefWidth="300.0" promptText="Enter Title"/>

        <TextArea fx:id="articleContentArea" layoutX="50.0" layoutY="90.0"
                  prefHeight="91.0" prefWidth="400.0"
                  promptText="Write Your Article..."/>

        <Label layoutX="50.0" layoutY="195.0" text="Publish Date"/>
        <DatePicker fx:id="publishDatePicker" layoutX="150.0" layoutY="190.0"
                    prefWidth="200.0"/>

        <Label layoutX="50.0" layoutY="230.0" text="Reference"/>
        <TextField fx:id="referenceField" layoutX="150.0" layoutY="225.0"
                   prefWidth="300.0" promptText="Reference"/>

        <Button fx:id="submitButton" layoutX="50.0" layoutY="265.0" mnemonicParsing="false"
                onAction="#submitArticleBtn"
                prefHeight="25.0" prefWidth="400.0"
                text="Submit Article"/>

        <TableView fx:id="articleTable" layoutX="50.0" layoutY="310.0"
                   prefHeight="121.0" prefWidth="595.0">
            <columns>
                <TableColumn fx:id="articleTitleCol" prefWidth="200.0" text="Title"/>
                <TableColumn fx:id="submissionDateCol" prefWidth="200.0" text="Date"/>
                <TableColumn fx:id="approvalStatusCol" prefWidth="195.0" text="Status"/>
            </columns>
        </TableView>

        <HBox layoutX="50.0" layoutY="445.0" spacing="10.0">
            <children>
                <Button mnemonicParsing="false" onAction="#editArticleBtn"
                        prefHeight="25.0" prefWidth="190.0" text="Edit Selected"/>
                <Button fx:id="resubmitButton" mnemonicParsing="false" onAction="#resubmitArticleBtn"
                        prefHeight="25.0" prefWidth="190.0" text="Resubmit"/>
            </children>
        </HBox>

        <Button layoutX="500.0" layoutY="445.0" mnemonicParsing="false"
                onAction="#switchToPhotojournalistBtn"
                prefWidth="145.0"
                text="Switch to Photojournalist"/>
    </children>
</AnchorPane>
