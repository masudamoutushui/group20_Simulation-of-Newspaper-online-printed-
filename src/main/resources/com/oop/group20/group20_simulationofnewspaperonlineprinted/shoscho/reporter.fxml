<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="503.0" prefWidth="695.0"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.ReporterController">
    <children>
        <Label layoutX="176.0" layoutY="26.0" text="Reporter Dashboard">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>

        <Label layoutX="100.0" layoutY="52.0" prefHeight="27.0" prefWidth="73.0" text="Article Title" />
        <TextField fx:id="articleTitleField" layoutX="173.0" layoutY="53.0" promptText="Enter Title" />

        <TextArea fx:id="articleContentArea" layoutX="49.0" layoutY="86.0" prefHeight="91.0" prefWidth="398.0" promptText="Write Your Article..." />

        <DatePicker fx:id="publishDatePicker" layoutX="227.0" layoutY="186.0" />
        <Label layoutX="149.0" layoutY="190.0" text="Publish Date" />

        <TextField fx:id="referenceField" layoutX="197.0" layoutY="218.0" promptText="Reference" />

        <Button layoutX="40.0" layoutY="243.0" prefHeight="25.0" prefWidth="527.0"
                text="Submit Article" mnemonicParsing="false" onAction="#submitArticleBtn" />

        <TableView fx:id="articleTable" layoutX="127.0" layoutY="278.0" prefHeight="121.0" prefWidth="231.0">
            <columns>
                <TableColumn fx:id="articleTitleCol" prefWidth="75.0" text="Title" />
                <TableColumn fx:id="submissionDateCol" prefWidth="75.0" text="Date" />
                <TableColumn fx:id="approvalStatusCol" prefWidth="75.0" text="Status" />
            </columns>
        </TableView>

        <HBox layoutX="143.0" layoutY="413.0" prefHeight="43.0" prefWidth="398.0">
            <children>
                <Button prefHeight="25.0" prefWidth="260.0" text="Edit Selected"
                        mnemonicParsing="false" onAction="#editArticleBtn" />
                <Button prefHeight="25.0" prefWidth="277.0" text="Resubmit"
                        mnemonicParsing="false" onAction="#resubmitArticleBtn" />
            </children>
        </HBox>

        <Button layoutX="216.0" layoutY="463.0" mnemonicParsing="false"
                text="Switch to Photojournalist" onAction="#switchToPhotojournalistBtn" />
    </children>
</AnchorPane>
