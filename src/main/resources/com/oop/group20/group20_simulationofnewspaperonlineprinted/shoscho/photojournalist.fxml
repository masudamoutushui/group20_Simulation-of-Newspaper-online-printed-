        <Button layoutX="405.0" layoutY="312.0" mnemonicParsing="false" onAction="#addCopyrightBtn" text="Add Copyright" />
        <Button layoutX="224.0" layoutY="355.0" mnemonicParsing="false" onAction="#collaborateBtn" text="Collaborate" />
        <Button layoutX="344.0" layoutY="355.0" mnemonicParsing="false" onAction="#monitorStatusBtn" text="Monitor Status" />

        <Button fx:id="switchToReporterBtn" layoutX="266.0" layoutY="398.0" mnemonicParsing="false"
                text="Switch to Reporter" onAction="#switchToReporterBtn">
            <font>
                <Font size="15.0" />
            </font>
        </Button>
    </children>
