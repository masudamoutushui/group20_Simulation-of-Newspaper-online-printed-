            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.PhotojournalistController">
    <children>
        <Text fx:id="photojournalistTitle" layoutX="224.0" layoutY="33.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Photojournalist Dashboard">
