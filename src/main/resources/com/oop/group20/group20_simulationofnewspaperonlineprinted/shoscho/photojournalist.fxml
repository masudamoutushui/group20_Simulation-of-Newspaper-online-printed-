        <Button layoutX="165.0" layoutY="98.0" mnemonicParsing="false" onAction="#submitPhotoBtn" prefHeight="25.0" prefWidth="325.0" text="Submit Photo" />

        <TableView fx:id="photoTable" layoutX="152.0" layoutY="133.0" prefHeight="156.0" prefWidth="351.0">
