<BorderPane prefHeight="855.0" prefWidth="787.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.oop.group20.group20_simulationofnewspaperonlineprinted.Muaaz.CheckController">

    <!-- Top: Title -->
    <top>
        <AnchorPane>
            <children>
                <Label layoutX="452.8" prefHeight="30.0" prefWidth="491.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Full content" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="453.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="5.0" />
            <Label layoutX="39.0" layoutY="12.0" text="Reviewed Articles" />
            </children>
        </AnchorPane>
    </top>

    <!-- Bottom: Results section -->
    <bottom>
        <AnchorPane prefHeight="591.0" prefWidth="804.0">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <children>
                <Label layoutX="278.0" layoutY="31.0" style="-fx-font-weight: bold;" text="Result" />

                <TitledPane expanded="true" layoutX="14.0" layoutY="53.0" prefHeight="130.0" prefWidth="826.0" text="Grammar Check">
                    <content>
                        <TextArea fx:id="grammarResultArea" editable="false" prefHeight="109.0" prefWidth="578.0" wrapText="true" />
                    </content>
                </TitledPane>

                <TitledPane expanded="true" layoutX="11.0" layoutY="205.0" prefHeight="112.0" prefWidth="830.0" text="Ethical Check">
               <content>
                        <TextArea fx:id="ethicalResultArea" prefHeight="138.0" prefWidth="563.0" wrapText="true" />
               </content>
                </TitledPane>

                <TitledPane expanded="true" layoutX="9.0" layoutY="326.0" prefHeight="138.0" prefWidth="836.0" text="Content Quality">
                    <content>
                        <TextArea fx:id="qualityResultArea" editable="false" prefHeight="42.0" prefWidth="834.0" wrapText="true" />
                    </content>
                </TitledPane>

                <Button layoutX="720.0" layoutY="15.0" mnemonicParsing="false" onAction="#backOnAction" text="Back to dashboard" />
            </children>
        </AnchorPane>
    </bottom>

    <!-- Right pane with TableView and TextArea side by side -->
    <right>
        <AnchorPane prefHeight="352.0" prefWidth="882.0" BorderPane.alignment="CENTER">
            <children>
                <TableView fx:id="tableView" layoutX="18.0" layoutY="8.0" prefHeight="232.0" prefWidth="250.0">
                    <columns>
                        <TableColumn fx:id="idCol" prefWidth="60.0" text="id" />
                        <TableColumn fx:id="NameCol" prefWidth="60.0" text="name" />
                        <TableColumn fx:id="AuthorCol" prefWidth="129.59998168945313" text="Author" />
                    </columns>
                </TableView>

                <TextArea fx:id="articleTextArea" layoutX="288.0" layoutY="21.0" prefHeight="218.0" prefWidth="264.0" promptText="Paste or write your article here..." wrapText="true" />

                <Button layoutX="591.0" layoutY="106.0" mnemonicParsing="false" onAction="#editOnAction" prefHeight="32.0" prefWidth="72.0" text="Edit" />
                <Button layoutX="686.0" layoutY="106.0" mnemonicParsing="false" onAction="#handleCheckArticle" prefHeight="32.0" prefWidth="72.0" text="Check" />
                <Button layoutX="582.0" layoutY="178.0" mnemonicParsing="false" onAction="#ApproveOnAction" prefHeight="32.0" prefWidth="90.0" text="Approve" />
                <Button layoutX="700.0" layoutY="178.0" mnemonicParsing="false" onAction="#RejectOnAction" prefHeight="32.0" prefWidth="72.0" text="Reject" />
            </children>
        </AnchorPane>
    </right>
</BorderPane>
