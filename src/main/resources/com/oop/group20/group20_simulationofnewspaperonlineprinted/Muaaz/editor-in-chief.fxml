    <Button text="Goal 3: Perform Ethical Check" onAction="#handleGoal3"/>
    <Button text="Goal 4: Manage Editorial Calendar" onAction="#handleGoal4"/>
    <Button text="Goal 5: Handle Urgent Revisions" onAction="#handleGoal5"/>
    <Button text="Goal 6: View Final Approval History" onAction="#handleGoal6"/>
    <Button text="Goal 7: Communicate with Reporters" onAction="#handleGoal7"/>
    <Button text="Goal 8: Logout or Exit" onAction="#handleGoal8"/>

</VBox>
