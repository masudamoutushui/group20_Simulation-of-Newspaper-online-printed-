<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane prefHeight="520.0" prefWidth="600" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.oop.group20.group20_simulationofnewspaperonlineprinted.Muaaz.EditorInChiefGoal5">

    <Label layoutX="20" layoutY="15" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Manage Editorial Team" />

    <TableView fx:id="teamTable" layoutX="20" layoutY="50" prefHeight="200" prefWidth="560">
        <columns>
            <TableColumn fx:id="idCol" prefWidth="60" text="ID" />
            <TableColumn fx:id="nameCol" prefWidth="150" text="Name" />
            <TableColumn fx:id="roleCol" prefWidth="100" text="Role" />
            <TableColumn fx:id="contactCol" prefWidth="180" text="Contact" />
        </columns>
    </TableView>

    <GridPane hgap="10" layoutX="20" layoutY="270" prefWidth="560" vgap="10">
        <columnConstraints>
            <ColumnConstraints percentWidth="25" />
            <ColumnConstraints percentWidth="75" />
        </columnConstraints>

        <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Role:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <ComboBox fx:id="roleComboBox" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Contact:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="contactField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
    </GridPane>

    <HBox layoutX="40.0" layoutY="414.0" spacing="10">
        <Button fx:id="addBtn" onAction="#handleAdd" prefWidth="80" text="Add" />
        <Button fx:id="updateBtn" onAction="#handleUpdate" prefWidth="80" text="Update" />
        <Button fx:id="deleteBtn" onAction="#handleDelete" prefWidth="80" text="Delete" />
        <Button onAction="#handleClear" prefWidth="80" text="Clear" />
    </HBox>

    <Label fx:id="messageLabel" layoutX="20.0" layoutY="463.0" prefHeight="22.0" prefWidth="560" textFill="red" wrapText="true" />
</AnchorPane>
