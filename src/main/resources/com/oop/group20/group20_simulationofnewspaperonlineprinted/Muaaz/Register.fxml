<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.oop.group20.group20_simulationofnewspaperonlineprinted.Muaaz.RegistrationController"
            prefWidth="400" prefHeight="400" style="-fx-padding: 20;">

    <!-- Username -->
    <Label text="Username:" layoutX="20" layoutY="20"/>
    <TextField fx:id="usernameField" layoutX="140" layoutY="16" prefWidth="220"/>

    <!-- Name -->
    <Label text="Name:" layoutX="20" layoutY="60"/>
    <TextField fx:id="nameField" layoutX="140" layoutY="56" prefWidth="220"/>

    <!-- Password -->
    <Label text="Password:" layoutX="20" layoutY="100"/>
    <PasswordField fx:id="passwordField" layoutX="140" layoutY="96" prefWidth="220"/>

    <!-- User Type -->
    <Label text="User Type:" layoutX="20" layoutY="140"/>
    <ComboBox fx:id="userTypeComboBox" layoutX="140" layoutY="136" prefWidth="220"/>

    <!-- Address -->
    <Label text="Address:" layoutX="20" layoutY="180"/>
    <TextField fx:id="addressField" layoutX="140" layoutY="176" prefWidth="220"/>

    <!-- Date of Birth -->
    <Label text="Date of Birth:" layoutX="20" layoutY="220"/>
    <DatePicker fx:id="dobPicker" layoutX="140" layoutY="216" prefWidth="220"/>

    <!-- Joining Date -->
    <Label text="Joining Date:" layoutX="20" layoutY="260"/>
    <DatePicker fx:id="joiningDatePicker" layoutX="140" layoutY="256" prefWidth="220"/>

    <!-- Buttons -->
    <Button text="Register" onAction="#registerOnAction" layoutX="140" layoutY="300" prefWidth="100"/>
    <Button text="Cancel" onAction="#cancelOnAction" layoutX="260" layoutY="300" prefWidth="100"/>

    <!-- Message Label -->
    <Label fx:id="messageLabel" layoutX="20" layoutY="350" prefWidth="340" style="-fx-text-fill: red;"/>
</AnchorPane>
