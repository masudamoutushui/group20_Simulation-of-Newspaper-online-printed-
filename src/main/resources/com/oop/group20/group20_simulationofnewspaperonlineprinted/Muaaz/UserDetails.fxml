<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="502.0" prefWidth="783.0" style="-fx-background-color: linear-gradient(to bottom right, #e3f2fd, #bbdefb);" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.oop.group20.group20_simulationofnewspaperonlineprinted.Muaaz.UserDetailsController">

    <children>
        <!-- Page Title -->
        <Label layoutX="220" layoutY="20" style="-fx-font-weight: bold;" text="Your Profile Details">
            <font>
                <Font size="24" />
            </font>
        </Label>

        <!-- Profile Card Background -->
        <AnchorPane layoutX="125" layoutY="80" prefWidth="400" prefHeight="300" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 20;">
            <effect>
                <DropShadow color="#999999" offsetX="2" offsetY="2" radius="8" />
            </effect>

            <children>
                <Label fx:id="lblName" layoutX="20" layoutY="15" style="-fx-font-size: 16; -fx-text-fill: #333333;" />
                <Label fx:id="lblUsername" layoutX="20" layoutY="50" style="-fx-font-size: 16; -fx-text-fill: #333333;" />
                <Label fx:id="lblUserType" layoutX="20" layoutY="85" style="-fx-font-size: 16; -fx-text-fill: #333333;" />
                <Label fx:id="lblDOB" layoutX="20" layoutY="120" style="-fx-font-size: 16; -fx-text-fill: #333333;" />
                <Label fx:id="lblJoiningDate" layoutX="20" layoutY="155" style="-fx-font-size: 16; -fx-text-fill: #333333;" />
                <Label fx:id="lblAddress" layoutX="20" layoutY="190" style="-fx-font-size: 16; -fx-text-fill: #333333;" />

                <Button onAction="#handleReviewArticleClick" layoutX="20" layoutY="230" prefHeight="35" prefWidth="130" style="-fx-background-color: #64b5f6; -fx-text-fill: white; -fx-font-size: 14; -fx-background-radius: 8;" text="Review Article" />
                <Button onAction="#assignArticleOnClick" layoutX="160" layoutY="230" prefHeight="35" prefWidth="130" style="-fx-background-color: #64b5f6; -fx-text-fill: white; -fx-font-size: 14; -fx-background-radius: 8;" text="Assign Article " />
                <Button onAction="#setScheduleOnAction" layoutX="300" layoutY="230" prefHeight="35" prefWidth="130" style="-fx-background-color: #64b5f6; -fx-text-fill: white; -fx-font-size: 14; -fx-background-radius: 8;" text="Set Schedule" />
            </children>
        </AnchorPane>
    </children>

</AnchorPane>
