<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.oop.group20.group20_simulationofnewspaperonlineprinted.Muaaz.Goal6Controller"
            prefWidth="950" prefHeight="650">

    <left>
        <VBox spacing="10" prefWidth="180" style="-fx-padding: 10; -fx-background-color: #e9e9e9;">
            <Button fx:id="composeButton" text="Compose New 📝" maxWidth="Infinity" onAction="#handleComposeButton"/>
            <Separator/>
            <Label text="Folders">
                <font><Font name="System Bold" size="14"/></font>
            </Label>
            <ListView fx:id="folderListView" prefHeight="400"/>
        </VBox>
    </left>

    <center>
        <VBox spacing="5" style="-fx-padding: 10;">
            <Label fx:id="folderTitleLabel" text="Inbox" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
            <TableView fx:id="messageTable" prefHeight="600">
                <columns>
                    <TableColumn fx:id="senderReceiverCol" text="From" prefWidth="150"/>
                    <TableColumn fx:id="subjectCol" text="Subject" prefWidth="250"/>
                    <TableColumn fx:id="dateCol" text="Date" prefWidth="120"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>

    <right>
        <StackPane prefWidth="400" style="-fx-border-width: 0 0 0 1; -fx-border-color: #d0d0d0;">
            <VBox fx:id="readPane" spacing="10" style="-fx-padding: 15;" visible="true">
                <Label text="Message Details" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <GridPane hgap="10" vgap="5">
                    <Label text="From:" style="-fx-font-weight: bold;" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <Label fx:id="readFromLabel" text="N/A" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                    <Label text="Subject:" style="-fx-font-weight: bold;" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <Label fx:id="readSubjectLabel" text="N/A" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                </GridPane>
                <Separator/>
                <TextArea fx:id="readMessageContentArea" wrapText="true" editable="false" prefHeight="400"/>
            </VBox>

            <VBox fx:id="composePane" spacing="10" style="-fx-padding: 15;" visible="false">
                <Label text="Compose New Message" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="To:" minWidth="60"/>
                    <ComboBox fx:id="recipientComboBox" promptText="Select Recipient" prefWidth="300"/>
                </HBox>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Subject:" minWidth="60"/>
                    <TextField fx:id="composeSubjectField" prefWidth="300"/>
                </HBox>
                <TextArea fx:id="composeMessageArea" wrapText="true" promptText="Type your message here..." prefHeight="350"/>
                <HBox spacing="10">
                    <Button fx:id="sendButton" text="Send" onAction="#handleSendButton"/>
                    <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancelButton"/>
                </HBox>
            </VBox>
        </StackPane>
    </right>

    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 5 10 5 10; -fx-background-color: #f0f0f0; -fx-border-width: 1 0 0 0; -fx-border-color: #d0d0d0;">
            <Label fx:id="statusLabel" text="Ready."/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="backButton" text="Back" onAction="#handleBack"/>
        </HBox>
    </bottom>
</BorderPane>