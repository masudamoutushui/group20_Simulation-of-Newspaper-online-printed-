<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.oop.group20.group20_simulationofnewspaperonlineprinted.Muaaz.Goaltwo"
            prefWidth="900" prefHeight="600">

    <!-- Left: Approved Articles -->
    <left>
        <VBox spacing="5" BorderPane.alignment="CENTER">
            <Label text="Approved Articles (Unscheduled)" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
            <TableView fx:id="approvedTable" prefWidth="300" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="idCol" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="titleCol" text="Title" prefWidth="150"/>
                    <TableColumn fx:id="authorCol" text="Author" prefWidth="100"/>
                </columns>
            </TableView>
        </VBox>
    </left>

    <!-- Right: Scheduling Controls -->
    <right>
        <VBox spacing="15" padding="10" BorderPane.alignment="CENTER">
            <Label text="Schedule Article" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>

            <Label text="Publication Date:"/>
            <DatePicker fx:id="publicationDatePicker"/>

            <Label text="Medium:"/>
            <ComboBox fx:id="mediumComboBox" promptText="Select Medium"/>

            <Label text="Priority:"/>
            <ComboBox fx:id="priorityComboBox" promptText="Select Priority"/>

            <Button fx:id="scheduleButton" text="Schedule Article" maxWidth="Infinity" onAction="#handleScheduleArticle"/>
        </VBox>
    </right>

    <!-- Bottom: Scheduled Articles -->
    <bottom>
        <VBox spacing="5" BorderPane.alignment="CENTER">
            <Label text="Scheduled Articles" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
            <TableView fx:id="scheduleTable" prefHeight="200" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="schedIdCol" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="schedTitleCol" text="Title" prefWidth="150"/>
                    <TableColumn fx:id="schedDateCol" text="Publication Date" prefWidth="120"/>
                    <TableColumn fx:id="schedMediumCol" text="Medium" prefWidth="80"/>
                    <TableColumn fx:id="schedPriorityCol" text="Priority" prefWidth="80"/>
                </columns>
            </TableView>
        </VBox>
    </bottom>

    <!-- Center: Instruction -->
    <center>
        <Label text="Select an article on the left to enable scheduling controls."
               style="-fx-text-fill: gray;"
               BorderPane.alignment="CENTER"/>
    </center>

</BorderPane>
