<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.oop.group20.group20_simulationofnewspaperonlineprinted.Muaaz.EditorInChiefGoal8" spacing="10" style="-fx-padding: 15;">
    <Label text="Article Logs History" style="-fx-font-size: 18px;" />
    <HBox spacing="10">
        <ComboBox fx:id="userFilterComboBox" promptText="Select User" />
        <ComboBox fx:id="statusFilterComboBox" promptText="Select Status" />
        <ComboBox fx:id="articleIdFilterComboBox" promptText="Select Article ID" />
        <DatePicker fx:id="fromDatePicker" promptText="From" />
        <DatePicker fx:id="toDatePicker" promptText="To" />
        <Button text="Search" onAction="#handleSearch" />
    </HBox>
    <TableView fx:id="logsTable" prefHeight="300">
        <columns>
            <TableColumn fx:id="articleIdCol" text="Article ID" />
            <TableColumn fx:id="actionCol" text="Action" />
            <TableColumn fx:id="performedByCol" text="Performed By" />
            <TableColumn fx:id="roleCol" text="Role" />
            <TableColumn fx:id="timestampCol" text="Timestamp" />
            <TableColumn fx:id="remarksCol" text="Remarks" />
        </columns>
    </TableView>

    <HBox spacing="10">
        <Button text="Export as PDF" onAction="#handleExportPDF" />
        <Button text="Export as CSV" onAction="#handleExportCSV" />
    </HBox>
</VBox>
