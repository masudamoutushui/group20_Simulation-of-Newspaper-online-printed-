<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" style="-fx-padding: 15;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.oop.group20.group20_simulationofnewspaperonlineprinted.Muaaz.EditorInChiefGoal8">
    <Label style="-fx-font-size: 18px;" text="Article Logs History" />
    <HBox spacing="10">
        <ComboBox fx:id="userFilterComboBox" promptText="Role" />
        <ComboBox fx:id="statusFilterComboBox" promptText="Select Status" />
        <ComboBox fx:id="articleIdFilterComboBox" promptText="Select Article ID" />
        <DatePicker fx:id="fromDatePicker" promptText="From" />
        <DatePicker fx:id="toDatePicker" promptText="To" />
        <Button onAction="#handleSearch" text="Search" />
    </HBox>
    <TableView fx:id="logsTable" prefHeight="300" prefWidth="814.0">
        <columns>
            <TableColumn fx:id="articleIdCol" text="Article ID" />
            <TableColumn fx:id="actionCol" text="Action" />
            <TableColumn fx:id="performedByCol" prefWidth="157.5999298095703" text="Performed By" />
            <TableColumn fx:id="roleCol" prefWidth="120.800048828125" text="Role" />
            <TableColumn fx:id="timestampCol" prefWidth="124.79998779296875" text="Timestamp" />
            <TableColumn fx:id="remarksCol" prefWidth="104.79998779296875" text="Remarks" />
         <TableColumn prefWidth="164.0" text="Status" />
        </columns>
    </TableView>

    <HBox spacing="10">
        <Button onAction="#handleExportPDF" text="Export as PDF" />
        <Button onAction="#handleExportCSV" text="Export as CSV" />
      <Button mnemonicParsing="false" onAction="#PreviousOnAction" prefHeight="32.0" prefWidth="164.0" text="back to dashboard" />
    </HBox>
</VBox>
