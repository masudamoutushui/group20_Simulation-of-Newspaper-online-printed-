                    </children>
                </GridPane>

                <Button onAction="#handleAddAdvertiser" text="Add Advertiser" />

                <TitledPane animated="false" text="Active Campaigns" VBox.vgrow="ALWAYS">
                    <content>
                        <ListView fx:id="campaignsListView" prefHeight="200.0" prefWidth="200.0" />
                    </content>
                </TitledPane>

                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Button fx:id="approveButton" mnemonicParsing="false" onAction="#handleApprove" style="-fx-background-color: #4CAF50;" text="Approve" textFill="WHITE" />
