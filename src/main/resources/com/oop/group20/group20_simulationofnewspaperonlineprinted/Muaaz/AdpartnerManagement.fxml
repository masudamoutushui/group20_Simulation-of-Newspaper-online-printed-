    <center>
        <TableView fx:id="advertiserTableView" prefHeight="584.0" prefWidth="748.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="companyColumn" prefWidth="200.0" text="Company Name" />
                <TableColumn fx:id="emailColumn" prefWidth="200.0" text="Contact Email" />
                <TableColumn fx:id="statusColumn" prefWidth="97.5999755859375" text="Status" />
