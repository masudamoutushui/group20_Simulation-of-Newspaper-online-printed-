<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.oop.group20.group20_simulationofnewspaperonlineprinted.Muaaz.EditorInChiefGoal3">

    <!-- Left: Table of requests -->
    <left>
        <VBox prefWidth="350" spacing="10" BorderPane.alignment="CENTER">
            <Label style="-fx-font-size: 16; -fx-font-weight: bold;" text="Sponsored Content and; Ad Requests" />
            <TableView fx:id="requestsTable" prefHeight="600" prefWidth="350">
                <columns>
                    <TableColumn fx:id="colId" prefWidth="50" text="ID" />
                    <TableColumn fx:id="colType" prefWidth="120" text="Type" />
                    <TableColumn fx:id="colAdvertiser" prefWidth="100" text="Advertiser" />
                    <TableColumn fx:id="colStatus" prefWidth="80" text="Status" />
                </columns>
            </TableView>
        </VBox>
    </left>

    <center>
        <VBox spacing="10" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="15" left="15" right="15" top="15" />
            </padding>
            <Label style="-fx-font-size: 16; -fx-font-weight: bold;" text="Request Details" />

            <!-- Sponsored article content preview -->
            <TextArea fx:id="contentPreview" editable="false" prefHeight="200" visible="false" wrapText="true" />

            <!-- Ad mockup image -->
            <ImageView fx:id="adMockupView" fitHeight="200" fitWidth="300" preserveRatio="true" visible="false" />

            <Label text="Feedback / Comments:" />
            <TextArea fx:id="feedbackArea" prefHeight="100" promptText="Write feedback to the Advertisement team..." />

            <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button mnemonicParsing="false" onAction="#handleback" text="Back to dashboard" />
                <Button fx:id="approveBtn" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Approve" />
                <Button fx:id="rejectBtn" style="-fx-background-color: #F44336; -fx-text-fill: white;" text="Reject" />
            </HBox>
        </VBox>
    </center>

</BorderPane>
