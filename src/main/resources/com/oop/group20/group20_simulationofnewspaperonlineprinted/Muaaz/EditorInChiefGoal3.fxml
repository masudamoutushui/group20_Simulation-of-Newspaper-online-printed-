<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.oop.group20.group20_simulationofnewspaperonlineprinted.Muaaz.EditorInChiefGoal3">

    <!-- Left: Table of requests -->
    <left>
        <VBox spacing="10" prefWidth="350" BorderPane.alignment="CENTER">
            <Label text="Sponsored Content &amp; Ad Requests" style="-fx-font-size: 16; -fx-font-weight: bold;" />
            <TableView fx:id="requestsTable" prefHeight="600" prefWidth="350">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="50" />
                    <TableColumn fx:id="colType" text="Type" prefWidth="120" />
                    <TableColumn fx:id="colAdvertiser" text="Advertiser" prefWidth="100" />
                    <TableColumn fx:id="colStatus" text="Status" prefWidth="80" />
                </columns>
            </TableView>
        </VBox>
    </left>

    <center>
        <VBox spacing="10" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15" />
            </padding>
            <Label text="Request Details" style="-fx-font-size: 16; -fx-font-weight: bold;" />

            <!-- Sponsored article content preview -->
            <TextArea fx:id="contentPreview" prefHeight="200" wrapText="true" editable="false" visible="false" />

            <!-- Ad mockup image -->
            <ImageView fx:id="adMockupView" fitWidth="300" fitHeight="200" preserveRatio="true" visible="false" />

            <Label text="Feedback / Comments:" />
            <TextArea fx:id="feedbackArea" prefHeight="100" promptText="Write feedback to the Advertisement team..." />

            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button fx:id="approveBtn" text="Approve" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
                <Button fx:id="rejectBtn" text="Reject" style="-fx-background-color: #F44336; -fx-text-fill: white;" />
            </HBox>
        </VBox>
    </center>

</BorderPane>
