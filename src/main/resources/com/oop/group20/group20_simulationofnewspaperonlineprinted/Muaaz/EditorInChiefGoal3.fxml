<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.oop.group20.group20_simulationofnewspaperonlineprinted.Muaaz.EditorInChiefGoal3">

    <!-- Left: Table of requests -->
    <left>
        <VBox prefWidth="350" spacing="10" BorderPane.alignment="CENTER">
            <Label style="-fx-font-size: 16; -fx-font-weight: bold;" text="Sponsored Content and; Ad Requests" />
            <TableView fx:id="requestsTable" prefHeight="600" prefWidth="350">
                <columns>
                    <TableColumn fx:id="colId" prefWidth="50" text="ID" />
                    <TableColumn fx:id="colType" prefWidth="120" text="Type" />
                    <TableColumn fx:id="colAdvertiser" prefWidth="100" text="Advertiser" />
                    <TableColumn fx:id="colStatus" prefWidth="80" text="Status" />
                </columns>
            </TableView>
         <AnchorPane prefHeight="200.0" prefWidth="490.0">
            <children>
               <Button layoutX="274.0" layoutY="154.0" mnemonicParsing="false" onAction="#addadvertiserOnClick" text="Add Advertiser deal" />
               <TextField fx:id="Idinput" layoutX="41.0" layoutY="22.0" prefHeight="32.0" prefWidth="108.0" promptText="id" />
               <TextField fx:id="typeInput" layoutX="41.0" layoutY="68.0" prefHeight="32.0" prefWidth="108.0" promptText="type" />
               <TextField fx:id="advertiserinput" layoutX="190.0" layoutY="22.0" prefHeight="32.0" prefWidth="114.0" promptText="advertiser" />
               <TextField fx:id="statusInput" layoutX="190.0" layoutY="68.0" prefHeight="32.0" prefWidth="119.0" promptText="Status" />
            </children>
         </AnchorPane>
        </VBox>
    </left>

    <center>
        <VBox prefHeight="874.0" prefWidth="673.0" spacing="10" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="15" left="15" right="15" top="15" />
            </padding>
            <Label style="-fx-font-size: 16; -fx-font-weight: bold;" text="Request Details" />

            <!-- Sponsored article content preview -->
            <TextArea fx:id="contentPreview" editable="false" prefHeight="200" visible="false" wrapText="true" />

            <!-- Ad mockup image -->
            <ImageView fx:id="adMockupView" fitHeight="200" fitWidth="300" preserveRatio="true" visible="false" />

            <Label text="Feedback / Comments:" />
            <TextArea fx:id="feedbackArea" prefHeight="100" promptText="Write feedback to the Advertisement team..." />

            <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button mnemonicParsing="false" onAction="#handleback" text="Back to dashboard" />
                <Button fx:id="approveBtn" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Approve" />
                <Button fx:id="rejectBtn" style="-fx-background-color: #F44336; -fx-text-fill: white;" text="Reject" />
            </HBox>
         <AnchorPane prefHeight="200.0" prefWidth="200.0">
            <children>
               <TableView fx:id="advertisertsttableview" layoutX="23.0" prefHeight="200.0" prefWidth="364.0">
                 <columns>
                   <TableColumn fx:id="idcol" prefWidth="75.0" text="id" />
                   <TableColumn fx:id="advertisercol" prefWidth="120.0" text="advertiser" />
                     <TableColumn fx:id="typecol" prefWidth="75.0" text="type" />
                     <TableColumn fx:id="statuscol" prefWidth="92.79998779296875" text="Status" />
                 </columns>
               </TableView>
               <TextArea fx:id="showfullAdvertiseproposal" layoutX="497.0" prefHeight="200.0" prefWidth="402.0" />
            </children>
         </AnchorPane>
        </VBox>
    </center>

</BorderPane>
